@model IEnumerable<DataAccessLayer.Project>

@{
    ViewBag.Title = "MyProjects";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/ProjectProgress.css" rel="stylesheet" />


<body>
    <div>
        <div id="AddProjectDiv" class="panel-heading" >
            <a href="#" class="btn btn-primary" onclick="AddNewItem('AddProjectDiv','/Home/CreateProject')">
                <i class="glyphicon glyphicon-plus"></i>
                Project
            </a>
        </div>

        @if (Model.Count() != 0)
        {

            <div class="panel-title">
                <p> Recently viewed</p>
            </div>
            <div class="panel-body">
                @foreach (var item in Model.OrderByDescending(p => p.DteConsult).Take(3))
                {
                    <ul class=" media-list col-md-2 btn" onclick="location.href='@Url.Action("ProjectDetail", "Home",  new { id = item.Id })'" style="text-align:center; margin-right:4px;background:@item.Color">
                        <li>@item.Name</li>
                        <li class="badge">@item.Boards.Count()</li>
                        <li>@item.DteConsult</li>
                    </ul>
                }
            </div>



            <div class="panel-title">
                <p> All Project</p>
            </div>
            <div class="panel-body">
                @foreach (var item in Model.OrderByDescending(p => p.DteConsult))
                {
                    <ul class=" media-list col-md-2 btn" onclick="location.href='@Url.Action("ProjectDetail", "Home",  new { id = item.Id })'" style="text-align:center; margin-right:4px; margin-bottom:4px; background:@item.Color">
                        <li>@item.Name</li>
                        <li class="badge">@item.Boards.Count()</li>
                        <li>@item.DteConsult</li>
                    </ul>
                }
            </div>
        }
        else
        {
            <div class="text-warning">
                <p>No project found ...</p>
            </div>
        }

    </div>
</body>
<script src="~/Scripts/ProjectProgress.js"></script>

