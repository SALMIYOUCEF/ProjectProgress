<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .fixed-left {
            top: 0;
            left: 0;
            right: 0;
            width: 11%;
            border-radius: 0;
            height: 100%;
        }

        .body-content {
            padding-left: 12%;
        }

        .bg-primary {
            background-color: #242323;
        }

        .navbar-dark .navbar-brand {
            color: #fff;
        }

        .navbar-default .navbar-nav > li > a {
            color: #fff;
        }

        body {
            padding-top: 5px;
        }
    </style>

</head>
<body id="test">
    <div>
        <div class=" navbar navbar-default navbar-fixed-top fixed-left bg-primary ">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                    <li class="nav-item">@Html.Partial("_LayoutHeader")</li>
                    <li class="nav-item">@Html.ActionLink("Projects", "AllProjectDetail", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Calender", "Calender", "Home")</li>
                    <li class="nav-item">@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>


        <div class="body-content">
            @RenderBody()
            @*<footer>
                    <hr />
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>*@
        </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

